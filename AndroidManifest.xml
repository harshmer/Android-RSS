<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.flipnews"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/f_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.flipnews.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.flipnews.TrendActivity"
            android:label="@string/title_activity_trend"
            android:theme="@android:style/Theme.Black.NoTitleBar" 
            android:noHistory="true">
        </activity>
        <activity
            android:name="com.example.flipnews.NewsList"
            android:label="@string/title_activity_news_list"
            android:theme="@android:style/Theme.Black.NoTitleBar"
            android:noHistory="true" >
        </activity>
        <activity
            android:name="com.example.flipnews.NewsViewActivity"
            android:label="@string/title_activity_news_view"
            android:theme="@android:style/Theme.Black.NoTitleBar"
            android:noHistory="true" >
        </activity>
        <activity
            android:name="com.example.flipnews.Favourites"
            android:label="@string/title_activity_favourites"
            android:noHistory="true" >
        </activity>
    </application>

</manifest>
